<!-- ======================================================================= -->
<!-- Main build file for the ilib java bits            -->
<!-- ======================================================================= -->
<project name="ilib.lg" default="export.ilib.webapp" basedir=".">
	<!-- =================================================================== -->
	<!-- properties                                                          -->
	<!-- =================================================================== -->

	<!-- Give user a chance to override properties without editing this file -->
	<!-- (and without typing -D each time it compiles it)                    -->
	<property file="build.properties"/>

	<!-- Properties that can be overridden -->
	<!-- directories -->
	<property name="build.base"						value="."/>
	<property name="build.export"					value="export"/>
	<property name="build.export.js"				value="export/js"/>
	<property name="build.js.lib"					value="js/lib"/>
	<property name="build.dist"						value="dist"/>

	<!-- =================================================================== -->
	<!-- Implement the standard targets                                      -->
	<!-- =================================================================== -->
	<target name="export.ilib.webapp" description="Export the build to ilib-webapp">
		<subant target="assemble.lg" buildpath="js" />
		<copy todir="../ilib-webapp/lib">
			<fileset dir="${build.export.js}/dyncode">
				<include name="**/*.js"/>
				<exclude name="ilib-rhino.js"/>
				<exclude name="ilib-ringo.js"/>
				<exclude name="RhinoLoader.js"/>
			</fileset>
			<fileset dir="${build.export.js}/assembled">
				<include name="ilib-lg.js"/>
				<include name="ilib-lg-compiled.js"/>
			</fileset>
			<fileset dir="${build.export}/package">
				<include name="package.json"/>
			</fileset>
		</copy>

		<copy todir="../ilib-webapp">
			<fileset dir="${build.export}/package">
				<include name="package.json"/>
			</fileset>
		</copy>
		<sync todir="../ilib-webapp/locale">
			<fileset dir="${build.export}/locale">
				<include name="**/*.json"/>
			</fileset>
		</sync>
	</target>
	<target name="export.enyo.ilib" description="Export the build to enyo-ilib">
		<copy todir="../enyo-ilib/ilib/lib">
			<fileset dir="${build.js.lib}">
					<include name="**/*.js"/>
					<exclude name="**/*-inc.js"/>
					<exclude name="externs.js"/>
					<exclude name="nfc/**"/>
					<exclude name="nfd/**"/>
					<exclude name="nfkc/**"/>
					<exclude name="nkkd/**"/>
					<exclude name="ilib-test.js"/>
					<exclude name="ilib-test-dyn.js"/>
					<exclude name="ilib-qt.js"/>
					<exclude name="ilib-enyo.js"/>
					<exclude name="ilib-rhino.js"/>
					<exclude name="ilib-web.js"/>
					<exclude name="ilib-ringo.js"/>
					<exclude name="QMLLoader.js"/>
					<exclude name="RhinoLoader.js"/>
					<exclude name="WebLoader.js"/>
					<exclude name="datefmtstr.js"/>
			</fileset>
		</copy>
		<sync todir="../enyo-ilib/ilib/locale">
			<fileset dir="${build.export}/locale">
				<include name="**/*.json"/>
			</fileset>
		</sync>
	</target>
</project>

